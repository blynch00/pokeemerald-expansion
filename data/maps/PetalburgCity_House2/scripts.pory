script PetalburgCity_House2_EventScript_SchoolKid{
	lockall
	faceplayer
	if(!(flag(FLAG_BABY_POKEMON_PETALBURG_0x497) == TRUE)){
		msgbox (format("Well, I had planned on hatching this egg, but it just doesn't seem to want to come out. Would you like it?"), MSGBOX_YESNO)
			if(var(VAR_RESULT) == YES){
				getpartysize
				compare(VAR_RESULT, 6)
				goto_if_eq(Player_Has_Full_Party)
				goto_if_ne(Player_Receives_Egg)
			}
			else{
				msgbox(format("Oh well, I guess I'll just sit here and stare at it until it hatches."), MSGBOX_DEFAULT)
			}
		
			}
			
	else{
		msgbox(format("Hey there! Hope that POKÃ©MON is treated well, and you form an inexplicable bond together."), MSGBOX_DEFAULT)
	}
	release
	end
}
	
script Player_Has_Full_Party{
	msgbox(format("Oh, too bad, you don't have room in your party."), MSGBOX_DEFAULT)
	release
	end
}
